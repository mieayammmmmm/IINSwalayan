@{
    ViewData["Title"] = "Dashboard Admin";
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Dashboard Admin</h5>
            </div>
            <div class="card-body">
                <h4>Selamat Datang di Admin Panel IIN Swalayan</h4>
                <p>Sistem admin berhasil dimuat! <span class="badge bg-success">Online</span></p>
                <hr>

                <!-- Statistics Cards -->
                <div class="row">
                    <div class="col-md-3">
                        <div class="card text-center bg-primary text-white mb-3">
                            <div class="card-body">
                                <i class="fas fa-box fa-2x mb-2"></i>
                                <h2>@(ViewBag.TotalProducts ?? 0)</h2>
                                <p>Total Produk Aktif</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-success text-white mb-3">
                            <div class="card-body">
                                <i class="fas fa-tags fa-2x mb-2"></i>
                                <h2>@(ViewBag.TotalCategories ?? 0)</h2>
                                <p>Total Kategori</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-warning text-white mb-3">
                            <div class="card-body">
                                <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                                <h2>@(ViewBag.LowStockProducts ?? 0)</h2>
                                <p>Stok Menipis (≤10)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center bg-info text-white mb-3">
                            <div class="card-body">
                                <i class="fas fa-clock fa-2x mb-2"></i>
                                <h2>@DateTime.Now.ToString("HH:mm")</h2>
                                <p>Jam Sekarang</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions and System Info -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6><i class="fas fa-bolt"></i> Quick Actions</h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Create", "Products", new { area = "Admin" })" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Tambah Produk
                                    </a>
                                    <a href="@Url.Action("Index", "Categories", new { area = "Admin" })" class="btn btn-success">
                                        <i class="fas fa-tags"></i> Kelola Kategori
                                    </a>
                                    <a href="@Url.Action("Index", "Products", new { area = "Admin" })" class="btn btn-info">
                                        <i class="fas fa-list"></i> Lihat Semua Produk
                                    </a>
                                    <a href="#" class="btn btn-warning">
                                        <i class="fas fa-shopping-cart"></i> Kelola Pesanan
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <!-- System Info -->
                        <div class="card">
                            <div class="card-header">
                                <h6><i class="fas fa-info-circle"></i> Info Sistem</h6>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled mb-0">
									<li class="mb-2">
										<a href="c:\framework\iinswalayan\iinswalayan\areas\admin\views\dashboard\index.cshtml">c:\framework\iinswalayan\iinswalayan\areas\admin\views\dashboard\index.cshtml</a>
                                        <i class="fas fa-clock text-primary"></i>
                                        <small class="text-muted">Server Time: @DateTime.Now.ToString("dd MMM yyyy HH:mm:ss")</small>
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-code-branch text-success"></i>
                                        <small class="text-muted">Version: 1.0.0</small>
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-server text-info"></i>
                                        <small class="text-muted">Environment: @(Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Production")</small>
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-user text-warning"></i>
                                        <small class="text-muted">Login: @User.Identity.Name</small>
                                    </li>
                                    <li>
                                        <i class="fas fa-database text-danger"></i>
                                        <small class="text-muted">Database: Connected</small>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Recent Activity -->
                        <div class="card mt-3">
                            <div class="card-header">
                                <h6><i class="fas fa-history"></i> Aktivitas Terbaru</h6>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="fas fa-circle text-success me-2" style="font-size: 0.5rem;"></i>
                                        <small>Admin login berhasil</small>
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-circle text-info me-2" style="font-size: 0.5rem;"></i>
                                        <small>Dashboard dimuat</small>
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-circle text-warning me-2" style="font-size: 0.5rem;"></i>
                                        <small>Database terkoneksi</small>
                                    </li>
                                    <li>
                                        <i class="fas fa-circle text-primary me-2" style="font-size: 0.5rem;"></i>
                                        <small>Sistem aktif</small>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>